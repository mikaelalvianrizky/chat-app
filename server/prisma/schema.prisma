datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ChatSession {
  id        Int           @id @default(autoincrement())
  userId    Int
  title     String?
  createdAt DateTime      @default(now())
  messages  ChatHistory[]
}

model ChatHistory {
  id            Int            @id @default(autoincrement())
  chatSessionId Int
  userMessage   String
  aiMessage     String
  createdAt     DateTime       @default(now())

  chatSession   ChatSession    @relation(fields: [chatSessionId], references: [id])
  feedbacks     ChatFeedback[] // Relasi ke feedback
}

model ChatFeedback {
  id            Int         @id @default(autoincrement())
  chatHistoryId Int
  rating        String      // Bisa "up" / "down", atau boolean/int
  createdAt     DateTime    @default(now())

  chatHistory   ChatHistory @relation(fields: [chatHistoryId], references: [id])
}
